@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Movies";
}

<h2>
    <i class="bi bi-film"></i>
    Movies

</h2>

<a class="btn btn-primary" asp-action="Create">
    <i class="bi bi-plus"></i>
    Add Movie
</a>

<div class="mt-4">
    @if (!Model.Any())
            {
    <div class="alert alert-primary" role="alert">
        No Movies Found!
    </div>
            }

  else
            {
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>@item.Title</li>
                    }
                </ul>
            }
</div>

